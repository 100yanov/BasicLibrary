@using Models
@model ICollection<BookDisplayViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td><a asp-page="/Books/BookDetails" asp-route-id="@b.Id">@b.Title</a></td>
                <td><a asp-page="/Authors/Details" asp-route-id="@b.AuthorId">@b.Author</a></td>
                <td>@b.Taken</td>
            </tr>
        }
    </tbody>
</table>