@page "{id:int}"
@model Library.App.Pages.BookPages.BookDetailsModel
@{
    ViewData["Title"] = "BookDetails";
}

<div class="row">
    <div class="col-md-2">
        <img  src="@Model.ImageUrl" class="img-thumbnail img-fluid">
    </div>

    <div class="pull-left col-lg-pull-3 ">
        <h2>@Model.Name</h2>
        <h3>@Model.Author</h3>
        <p>@Model.Description</p>
    </div>
</div>