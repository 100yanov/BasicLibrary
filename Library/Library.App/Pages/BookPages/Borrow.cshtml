@page "{id:int}"
@model Library.App.Pages.BookPages.BorrowModel
@{
    ViewData["Title"] = "Borrow";
}

<h2>Borrow @Model.Book.Title</h2>
<form asp-action="Borrow" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <select asp-for="@Model.Borrower" >
            @foreach (var b in Model.Borrowers)
            {
                <option value="@b.Key" >@b.Value</option>
            }
        </select>
       
    </div>
    <div class="form-group">
        <input type="submit" value="Borrow" />
    </div>
</form>>


